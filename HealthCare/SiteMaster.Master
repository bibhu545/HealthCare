                        </asp:ContentPlaceHolder>
                    </div>
                    <div class="col-md-3 side-pane">
                        <div class="profile-image">
                            <center>
                                <img src="<% Response.Write(user.Profile); %>" alt="Profile Picture" class="img-responsive img-circle" />
                                <h3>Hello <% Response.Write(user.FirstName); %></h3>
                                <br />
                                <div class="list-group">
                                    <a href="/Profile/UserHome.aspx" class="list-group-item">Home</a>
                                    <a href="/Profile/ViewProfile.aspx" class="list-group-item">View Profile</a>
                                    <a href="/Profile/EditProfile.aspx" class="list-group-item">Edit Profile</a>
                                    <a href="/Profile/ChangePassword.aspx" class="list-group-item">Change Password</a>
                                </div>
                            </center>
